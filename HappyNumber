class Solution {
    public boolean isHappy(int n) {
        int slow = n;
        int fast = n;

        do {
            slow = getSquareSum(slow);              
            fast = getSquareSum(getSquareSum(fast)); 
        } while (slow != fast);

        return slow == 1;
    }

    private int getSquareSum(int num) {
        int sum = 0;
        while (num > 0) {
            int digit = num % 10;
            sum += digit * digit;
            num /= 10;
        }
        return sum;
    }
}
